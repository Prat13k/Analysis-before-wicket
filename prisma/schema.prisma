generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Can be changed to other providers like sqlite, mysql, etc.
  url      = env("DATABASE_URL")
}

model Blog {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String
  content     String
  country1    String
  country2    String
  type        String   // "pre-match" or "post-match"
  readTime    Int      // in minutes
  publishedAt DateTime @default(now())
}

model Subscriber {
  id          String   @id @default(cuid())
  email       String   @unique
  subscribedAt DateTime @default(now())
}